rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Hotels können von jedem gelesen werden, aber nur von authentifizierten
    // Benutzern (Agentur) erstellt, geändert oder gelöscht werden.
    match /hotels/{hotelId} {
      allow read;
      allow write: if request.auth != null;
    }

    // Buchungen können über den direkten Link (read) von jedem gelesen werden.
    // Das ist sicher, da die bookingId nicht erratbar ist.
    // Das Auflisten aller Buchungen ist nicht erlaubt.
    // Das Ändern, Erstellen und Löschen ist nur authentifizierten Benutzern (Hotelier) gestattet.
    match /bookings/{bookingId} {
      allow get, list: if request.auth != null;
      allow read;
      allow create, update, delete: if request.auth != null;
    }
  }
}
