rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Hotel logos can be read by anyone (they are public)
    // but only written by authenticated users (agency).
    match /hotel-logos/{hotelId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Guest documents (ID cards, payment proofs) are more sensitive.
    // The path should include the bookingId for security.
    // e.g., /booking-files/{bookingId}/id_front.jpg
    match /booking-files/{bookingId}/{allPaths=**} {
      // Allow read only for authenticated users (hotelier/agency).
      allow read: if request.auth != null;
      // Allow write for anyone (for guest uploads), but the path is secured
      // by the server-side logic, preventing guests from writing to other booking folders.
      allow write: if true;
    }
  }
}
